<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstScreenActivity"
    android:background="@color/md_theme_dark_onErrorContainer"
    android:orientation="vertical">

    <!--weight extends the size of the TextView so more text can fit inside-->
    <!--marginTop creates space above TextView-->
    <!--center_horizontal aligns the text to the middle-->
    <TextView
        android:id="@+id/introTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_gravity="top"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:fontFamily="@font/lexend"
        android:text="Start Tracking Your Expenses Today!"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/md_theme_light_surface" />

    <ImageView
        android:id="@+id/moneyspread"
        android:src="@drawable/moneyspread"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal" />

    <!--iconTint is the color for the drawable icon-->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/signIn"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        app:cornerRadius="8dp"
        app:icon="@drawable/baseline_login_24"
        app:iconTint="@color/md_theme_light_shadow"
        app:iconPadding="8dp"
        app:iconGravity="textStart"
        app:backgroundTint="@color/md_theme_dark_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/createAcc"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Your Account"
        app:cornerRadius="8dp"
        app:icon="@drawable/baseline_person_add_24"
        app:iconTint="@color/md_theme_light_shadow"
        app:iconPadding="8dp"
        app:iconGravity="textStart"
        app:backgroundTint="@color/md_theme_dark_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.appcompat.widget.LinearLayoutCompat>